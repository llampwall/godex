{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["template_used", "confidence", "alternatives", "reasoning"],
  "properties": {
    "template_used": {
      "type": "string",
      "enum": ["mono", "service", "web", "python", "blank"]
    },
    "confidence": {
      "type": "string",
      "enum": ["high", "medium", "low"]
    },
    "alternatives": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["mono", "service", "web", "python", "blank"]
      }
    },
    "reasoning": {
      "type": "string"
    }
  }
}
